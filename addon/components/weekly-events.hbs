<div class="weekly-events">
  <div class="year">
    <h2>
      <FaIcon
        @icon="backward"
        @title={{t "general.goToPreviousYear"}}
        role="button"
        class="clickable link"
        {{on "click" this.decrementYear}}
      />
      {{@year}}
      <FaIcon
        @icon="forward"
        @title={{t "general.goToNextYear"}}
        role="button"
        class="clickable link"
        {{on "click" this.incrementYear}}
      />
    </h2>
  </div>
  {{#each this.weeksInYear as |week|}}
    <WeekGlance
      @collapsible={{true}}
      @collapsed={{not (includes week @expandedWeeks)}}
      @year={{@year}}
      @week={{week}}
      @toggleCollapsed={{fn @toggleOpenWeek week}}
    />
  {{/each}}
  <div class="year">
    <h2>
      <FaIcon
        @icon="backward"
        @title={{t "general.goToPreviousYear"}}
        role="button"
        class="clickable link"
        {{on "click" this.decrementYear}}
      />
      {{@year}}
      <FaIcon
        @icon="forward"
        @title={{t "general.goToNextYear"}}
        role="button"
        class="clickable link"
        {{on "click" this.incrementYear}}
      />
    </h2>
  </div>
</div>

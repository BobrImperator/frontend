{{#unless firstPage}}
  <span class="clickable link backward" {{action "goBack"}}>{{fa-icon "backward"}}</span>
{{/unless}}

{{#unless limitless}}
  {{t "general.pagedResultsCount" start=start end=end total=total}}
{{else}}
  <select onchange={{action "setLimit" value="target.value"}}>
    {{#each offsetOptions as |option|}}
      <option value={{option}} selected={{is-equal option limit}}>
        {{option}}
      </option>
    {{/each}}
  </select>
  {{t "general.perPage"}}
{{/unless}}

{{#unless lastPage}}
  <span class="clickable link forward" {{action "goForward"}}>{{fa-icon "forward"}}</span>
{{/unless}}

{{#unless limitless}}
  <select onchange={{action "setLimit" value="target.value"}}>
    {{#each offsetOptions as |option|}}
      <option value={{option}} selected={{is-equal option limit}}>
        {{option}}
      </option>
    {{/each}}
  </select>
  {{t "general.perPage"}}
{{/unless}}

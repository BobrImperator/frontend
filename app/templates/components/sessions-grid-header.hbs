<span class='expand-collapse-control' {{action toggleExpandAll}} data-test-expand-collapse-all>
  {{#if @showExpandAll}}
    {{#if @allSessionsExpanded}}
      {{fa-icon 'caret-down'}}
    {{else}}
      {{fa-icon 'caret-right'}}

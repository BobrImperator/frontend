<section class="course-visualize-instructors">
  <div class="backtolink">
    <LinkTo @route="course-visualizations" @model={{this.model}}>
      {{t "general.otherVisualizations"}}
    </LinkTo>
  </div>
  <h2 class="clickable">
    <LinkTo @route="course" @model={{this.model}}>
      {{this.model.title}}
      {{this.model.academicYear}}
    </LinkTo>
  </h2>
  <h3>
    {{t "general.instructors"}}
  </h3>
  <div class="filter">
    <input
      type="search"
      value={{this.name}}
      placeholder={{t "general.filterPlaceholder"}}
      oninput={{perform this.setName value="target.value"}}
    >
  </div>
  <VisualizerCourseInstructors @filter={{this.name}} @course={{this.model}} />
</section>

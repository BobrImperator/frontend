<div class="programyear-header" ...attributes>
  <div class="backtolink">
    {{#if (is-fulfilled programYear.program)}}
      <LinkTo @route="program" @query={{hash}}>
        {{t "general.backToProgramYears"}}
      </LinkTo>
    {{/if}}
  </div>
  <header>
    <div class="title">
      {{#if programYear.locked}}
        <FaIcon @icon="lock" />
      {{/if}}
      {{#if programYear}}
        <h4>
          {{t "general.matriculationYear"}}
          {{@programYear.academicYear}}
        </h4>
        <h5>
          {{#if (get (await programYear.cohort) "title")}}
            {{get (await programYear.cohort) "title"}}
          {{else}}
            {{t "general.classOf" year=(await programYear.classOfYear)}}
          {{/if}}
        </h5>
      {{/if}}
    </div>
    <div class="programyear-publication">
      {{#if
        (and canUpdate (or programYear.isScheduled (not programYear.isPublished)))
      }}
        <button type="button" {{action "activate" programYear}}>
          {{t "general.activate"}}
        </button>
      {{/if}}
    </div>
  </header>
</div>

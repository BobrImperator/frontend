<WeeklyCalendar
  @date={{@date}}
  @events={{this.singleDayEvents}}
  @changeToDayView={{if this.areDaysSelectable (action "changeToDayView") (noop)}}
  @selectEvent={{if this.areEventsSelectable @selectEvent (noop)}}
/>
<IliosCalendarPreWorkEvents
  @events={{this.ilmPreWorkEvents}}
  @areEventsSelectable={{this.areEventsSelectable}}
/>
<IliosCalendarMultidayEvents
  @events={{this.multiDayEventsList}}
  @selectEvent={{action "selectEvent"}}
  @areEventsSelectable={{this.areDaysSelectable}}
/>

<h4 id="verification-preview-table-2">{{t "general.table2PrimaryInstructionalMethodByNonClerkshipSequenceBlock"}}</h4>
<table>
  <thead>
    <tr>
      <th colspan="2" rowspan="2">{{t "general.nonClerkshipSequenceBlocks"}}</th>
      <th rowspan="2">{{t "general.academicLevel"}}</th>
      <th colspan={{add 1 (get (await @data.methods) "length")}}>
        {{t "general.numberOfFormalInstructionalHoursPerCourse"}}
      </th>
    </tr>
    <tr>
      {{#each (await @data.methods) as |method|}}
        <th>{{method.title}}</th>
      {{/each}}
      <th>{{t "general.total"}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each (await this.nonClerkships) as |clerkship|}}
      <tr>
        <td colspan="2">{{clerkship.title}}</td>
        <td>{{clerkship.level}}</td>
        {{#each (await clerkship.methods) as |method|}}
          <td>{{method}}</td>
        {{/each}}
        <td>{{clerkship.total}}</td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td colspan="2">{{t "general.total"}}</td>
      <td></td>
      {{#each (await this.methodTotals) as |total|}}
        <td>{{total}}</td>
      {{/each}}
      <td>{{await this.sumTotal}}</td>
    </tr>
  </tfoot>
</table>
{{#if @tocId}}
  <a href="#{{@tocId}}">{{t "general.backToTableOfContents"}}</a>
{{/if}}
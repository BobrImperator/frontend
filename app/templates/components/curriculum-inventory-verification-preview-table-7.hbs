<table>
  <caption>{{t "general.table7AllEventsWithAssessmentsTaggedAsFormativeOrSummative"}}</caption>
  <thead>
    <tr>
      <th>{{t "general.itemCode"}}</th>
      <th colspan="2">{{t "general.assessmentMethods"}}</th>
      <th>{{t "general.numberOfSummativeAssessments"}}</th>
      <th>{{t "general.numberOfFormativeAssessments"}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each (await data) as |row|}}
      <tr>
        <td>{{row.id}}</td>
        <td colspan="2">{{row.title}}</td>
        <td>{{row.num_summative_assessments}}</td>
        <td>{{row.num_formative_assessments}}</td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td colspan="2">{{t "general.total"}}</td>
      <td>{{await totalNumSummativeAssessments}}</td>
      <td>{{await totalNumFormativeAssessments}}</td>
    </tr>
  </tfoot>
</table>
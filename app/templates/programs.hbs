{{title (t "general.programs")}}
<section class="programs-list">
  <div class="filters">
    <div class="schoolsfilter">
      <FaIcon @icon="university" @fixedWidth={{true}} />
      {{#if hasMoreThanOneSchool}}
        <select onchange={{action "changeSelectedSchool" value="target.value"}}>
          {{#each (sort-by "title" model.schools) as |school|}}
            <option
              value={{school.id}}
              selected={{is-equal school selectedSchool}}
            >
              {{school.title}}
            </option>
          {{/each}}
        </select>
      {{else}}
        {{selectedSchool.title}}
      {{/if}}
    </div>
    <div class="titlefilter">
      <input
        value={{titleFilter}}
        oninput={{action (perform changeTitleFilter) value="target.value"}}
        placeholder={{t "general.programTitleFilterPlaceholder"}}
      >
    </div>
  </div>
  <section class="programs">
    <div class="header">
      <div class="title">
        <h2>
          {{t "general.programs"}}
        </h2>
      </div>
      <div class="actions">
        {{#if (await canCreate)}}
          <ExpandCollapseButton
            @value={{showNewProgramForm}}
            @action={{action "toggleEditor"}}
          />
        {{/if}}
      </div>
    </div>
    <section class="new">
      {{#liquid-if showNewProgramForm class="vertical"}}
        <NewProgram
          @save={{action "saveNewProgram"}}
          @cancel={{action "cancel"}}
        />
      {{/liquid-if}}
      {{#if newProgram}}
        <div class="saved-result">
          <LinkTo @route="program" @model={{newProgram}}>
            <FaIcon @icon="external-link-square-alt" />
            {{newProgram.title}}
          </LinkTo>
          {{t "general.savedSuccessfully"}}
        </div>
      {{/if}}
    </section>
    {{#if deleted}}
      <div class="saved-program">
        {{savedProgram.title}}
        {{t "general.removedSuccessfully"}}
      </div>
    {{/if}}
    <div class="list">
      {{#if (is-fulfilled this.filteredPrograms)}}
        <ProgramList
          @programs={{await this.filteredPrograms}}
          @query={{this.titleFilter}}
          @activate={{action "activateProgram"}}
          @edit={{action "editProgram"}}
          @remove={{action "removeProgram"}}
        />
      {{else}}
        <PulseLoader />
      {{/if}}
    </div>
  </section>
</section>
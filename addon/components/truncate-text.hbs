{{#if (has-block)}}
  {{yield this.displayText this.expand}}
{{else}}
  <span class="truncate-text" ...attributes>
    {{this.displayText}}
    {{#if this.showIcons}}
      <button
        class="expand-buttons"
        aria-label={{t "general.expand"}}
        data-test-expand
        {{on "click" this.expand}}
      >
        <FaIcon @icon="ellipsis-h" /> <FaIcon @icon="info-circle" />
      </button>
    {{/if}}
  </span>
{{/if}}

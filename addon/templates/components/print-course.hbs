<div class="header" data-test-course-header>
  <h2>
    {{this.course.title}}
  </h2>
  <h4>
    {{this.course.academicYear}}
  </h4>
  <PublicationStatus @item={{this.course}} />
</div>
<section class="overview block" data-test-course-overview>
  <div class="title">
    {{t "general.overview"}}
  </div>
  <div class="content">
    <div class="inline-label-data-block">
      <label>
        {{t "general.start"}}:
      </label>
      <div>
        {{moment-format this.course.startDate "L"}}
      </div>
    </div>
    <div class="inline-label-data-block">
      <label>
        {{t "general.externalId"}}:
      </label>
      <div>
        {{this.course.externalId}}
      </div>
    </div>
    <div class="inline-label-data-block">
      <label>
        {{t "general.level"}}:
      </label>
      <div>
        {{this.course.level}}
      </div>
    </div>
    <div class="inline-label-data-block">
      <label>
        {{t "general.end"}}:
      </label>
      <div>
        {{moment-format this.course.endDate "L"}}
      </div>
    </div>
    <br>
    <br>
    <div class="inline-label-data-block">
      <label>
        {{t "general.directors"}}:
      </label>
      <div>
        <span>
          {{#each this.sortedDirectors as |user|}}
            {{user.fullName}},
          {{/each}}
        </span>
      </div>
    </div>
  </div>
</section>
<section class="block" data-test-course-competencies>
  <div class="title">
    {{t "general.competencies"}} ({{get (await this.course.competencies) "length"}})
  </div>
  <div class="content">
    {{#if (is-fulfilled this.course.competencies)}}
      {{#if (get (await this.course.competencies) "length")}}
        <ul class="static-list">
          {{#each (await this.course.domains) as |domain|}}
            <li>
              {{domain.title}}
              <ul>
                {{#each (await domain.subCompetencies) as |competency|}}
                  <li>
                    {{competency.title}}
                  </li>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    {{else}}
      <LoadingPart />
    {{/if}}
  </div>
</section>
<section class="block" data-test-course-terms>
  <div class="title">
    {{t "general.terms"}} ({{this.course.terms.length}})
  </div>
  <div class="content">
    {{#each (await this.course.associatedVocabularies) as |vocab|}}
      <DetailTermsList
        @vocabulary={{vocab}}
        @terms={{this.course.terms}}
        @canEdit={{false}}
      />
    {{/each}}
  </div>
</section>
<section class="block" data-test-course-objectives>
  <div class="title">
    {{t "general.objectives"}} ({{this.course.objectives.length}})
  </div>
  {{#if (get (await this.course.objectives) "length")}}
    <div class="content">
      <table>
        <thead>
          <tr>
            <th class="text-left">
              {{t "general.objectives"}}
            </th>
            <th class="text-left">
              {{t "general.parentObjectives"}}
            </th>
            <th class="text-left">
              {{t "general.meshTerms"}}
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each (await this.course.sortedObjectives) as |objective|}}
            <tr>
              <td class="text-left text-top">
                {{objective.textTitle}}
              </td>
              <td class="text-left text-top">
                {{#if objective.hasParents}}
                  {{#each objective.parents as |parent|}}
                    {{#if this.course.hasMultipleCohorts}}
                      <strong>
                        {{get (await parent.firstProgram) "title"}}
                        {{#if (get (await parent.firstCohort) "title")}}
                          {{get (await parent.firstCohort) "title"}}
                        {{else}}
                          {{t
                            "general.classOf"
                            year=(await
                              (get (await parent.firstCohort) "classOfYear")
                            )
                          }}
                        {{/if}}
                      </strong>
                      <br>
                    {{/if}}
                    {{parent.textTitle}}
                    {{#if parent.competency}}
                      ({{parent.competency.title}})
                    {{/if}}
                    <br>
                  {{/each}}
                {{/if}}
              </td>
              <td class="text-left text-top">
                <ul class="inline-list">
                  {{#each
                    (sort-by
                      "name" (await objective.meshDescriptors)
                    ) as |descriptor|
                  }}
                    <li>
                      {{descriptor.name}}
                    </li>
                  {{/each}}
                </ul>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{/if}}
</section>
<section class="block" data-test-course-learningmaterials>
  <div class="title">
    {{t "general.learningMaterials"}} ({{get (await this.courseLearningMaterials) "length"}})
  </div>
  <div class="content">
    {{#if (get (await this.courseLearningMaterials) "length")}}
      <table>
        <thead>
          <tr>
            <th class="text-left" colspan="2">
              {{t "general.displayName"}}
            </th>
            <th class="text-center">
              {{t "general.type"}}
            </th>
            <th class="text-center">
              {{t "general.required"}}
            </th>
            <th class="text-left">
              {{t "general.notes"}}
            </th>
            <th class="text-left description" colspan="4">
              {{t "general.description"}}
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each (await this.courseLearningMaterials) as |lm|}}
            <tr>
              <td class="text-left text-top" colspan="2">
                {{lm.learningMaterial.title}}
              </td>
              <td class="text-center text-top">
                {{lm.learningMaterial.type}}
              </td>
              <td class="text-center text-top">
                {{#if lm.required}}
                  <span class="add">
                    {{t "general.yes"}}
                  </span>
                {{else}}
                  <span class="remove">
                    {{t "general.no"}}
                  </span>
                {{/if}}
              </td>
              <td class="text-left text-top">
                {{#if lm.notes}}
                  <span class="add">
                    {{t "general.yes"}}
                  </span>
                {{else}}
                  <span class="remove">
                    {{t "general.no"}}
                  </span>
                {{/if}}
              </td>
              <td class="text-left text-top" colspan="4">
                {{remove-html-tags lm.learningMaterial.description}}
                <p></p>
                {{lm.learningMaterial.citation}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/if}}
  </div>
</section>
<section class="block" data-test-course-mesh>
  <div class="title">
    {{t "general.mesh"}} ({{this.course.meshDescriptors.length}})
  </div>
  <div class="content">
    <ul class="inline-list">
      {{#each this.sortedMeshDescriptors as |descriptor|}}
        <li>
          {{descriptor.name}}
        </li>
      {{/each}}
    </ul>
  </div>
</section>
{{#each (await this.sortedSessionProxies) as |session|}}
  <div class="header" data-test-session-header>
    <h2>
      {{session.title}}
    </h2>
    <PublicationStatus @item={{session}} />
  </div>
  <section class="overview block">
    <div class="title">
      {{t "general.overview"}}
    </div>
    <div class="content">
      <div class="inline-label-data-block">
        <label>
          {{t "general.sessionType"}}:
        </label>
        <div>
          {{session.sessionType.title}}
        </div>
      </div>
      <br>
      <div class="inline-label-data-block">
        <label>
          {{t "general.supplementalCurriculum"}}:
        </label>
        <div>
          <BooleanCheck @value={{session.supplemental}} />
        </div>
      </div>
      <div class="inline-label-data-block">
        <label>
          {{t "general.specialAttireRequired"}}:
        </label>
        <div>
          <BooleanCheck @value={{session.attireRequired}} />
        </div>
      </div>
      <div class="inline-label-data-block">
        <label>
          {{t "general.specialEquipmentRequired"}}:
        </label>
        <div>
          <BooleanCheck @value={{session.equipmentRequired}} />
        </div>
      </div>
      <div class="inline-label-data-block">
        <label>
          {{t "general.attendanceRequired"}}:
        </label>
        <div>
          <BooleanCheck @value={{session.attendanceRequired}} />
        </div>
      </div>
      <br>
      <div class="inline-label-data-block">
        <label>
          {{t "general.description"}}:
        </label>
        <div>
          {{session.sessionDescription.textDescription}}
        </div>
      </div>
    </div>
  </section>
  <section class="block" data-test-session-objectives>
    <div class="title">
      {{t "general.objectives"}} ({{session.objectives.length}})
    </div>
    {{#if (get (await session.objectives) "length")}}
      <div class="content">
        <table>
          <thead>
            <tr>
              <th class="text-left">
                {{t "general.objectives"}}
              </th>
              <th class="text-left">
                {{t "general.parentObjectives"}}
              </th>
              <th class="text-left">
                {{t "general.meshTerms"}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each (await session.sortedObjectives) as |objective|}}
              <tr>
                <td class="text-left text-top">
                  {{objective.textTitle}}
                </td>
                <td class="text-left text-top">
                  {{#if objective.hasParents}}
                    {{#each objective.parents as |parent|}}
                      {{parent.textTitle}}
                      {{#if objective.hasMultipleParents}}
                        <br><br>
                      {{/if}}
                    {{/each}}
                  {{/if}}
                </td>
                <td class="text-left text-top">
                  <ul class="inline-list">
                    {{#each
                      (sort-by
                        "name" (await objective.meshDescriptors)
                      ) as |descriptor|
                    }}
                      <li>
                        {{descriptor.name}}
                      </li>
                    {{/each}}
                  </ul>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/if}}
  </section>
  <section class="block">
    <div class="title">
      {{t "general.learningMaterials"}} ({{get (await session.sessionLearningMaterials) "length"}})
    </div>
    <div class="content">
      {{#if (get (await session.sessionLearningMaterials) "length")}}
        <table>
          <thead>
            <tr>
              <th class="text-left" colspan="2">
                {{t "general.displayName"}}
              </th>
              <th class="text-center">
                {{t "general.type"}}
              </th>
              <th class="text-center">
                {{t "general.required"}}
              </th>
              <th class="text-left">
                {{t "general.notes"}}
              </th>
              <th class="text-left" colspan="4">
                {{t "general.description"}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each (await session.sessionLearningMaterials) as |lm|}}
              <tr>
                <td class="text-left text-top" colspan="2">
                  {{lm.learningMaterial.title}}
                </td>
                <td class="text-center text-top">
                  {{lm.learningMaterial.type}}
                </td>
                <td class="text-center text-top">
                  {{#if lm.required}}
                    <span class="add">
                      {{t "general.yes"}}
                    </span>
                  {{else}}
                    <span class="remove">
                      {{t "general.no"}}
                    </span>
                  {{/if}}
                </td>
                <td class="text-left text-top">
                  {{lm.learningMaterial.notes}}
                </td>
                <td class="text-left text-top" colspan="4">
                  {{remove-html-tags lm.learningMaterial.description}}
                  <p></p>
                  {{lm.learningMaterial.citation}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}
    </div>
  </section>
  <section class="block">
    <div class="title">
      {{t "general.terms"}} ({{session.terms.length}})
    </div>
    <div class="content">
      <div class="content">
        {{#each (await session.associatedVocabularies) as |vocab|}}
          <DetailTermsList
            @vocabulary={{vocab}}
            @terms={{session.terms}}
            @canEdit={{false}}
          />
        {{/each}}
      </div>
    </div>
  </section>
  <section class="block">
    <div class="title">
      {{t "general.mesh"}} ({{session.sortedMeshDescriptors.length}})
    </div>
    <div class="content">
      <ul class="inline-list">
        {{#each session.sortedMeshDescriptors as |descriptor|}}
          <li>
            {{descriptor.name}}
          </li>
        {{/each}}
      </ul>
    </div>
  </section>
  {{#if session.isIndependentLearning}}
    <section class="block" data-test-session-ilm-section>
      <div class="title">
        {{t "general.independentLearning"}}
      </div>
      <div class="content">
        <table>
          <thead>
            <tr>
              <th>
                {{t "general.hours"}}
              </th>
              <th>
                {{t "general.dueBy"}}
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                {{get (await session.ilmSession) "hours"}}
              </td>
              <td>
                {{moment-format (get (await session.ilmSession) "dueDate") "L"}}
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  {{/if}}
  <section class="block">
    <div class="title">
      {{t "general.offerings"}} ({{session.offerings.length}})
    </div>
    <div class="content">
      {{#if session.offerings.length}}
        <table>
          <thead>
            <tr>
              <th class="text-left">
                {{t "general.time"}}
              </th>
              <th class="text-left">
                {{t "general.location"}}
              </th>
              <th class="text-left">
                {{t "general.instructors"}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each (await session.offerings) as |offering|}}
              <tr>
                <td class="text-left">
                  {{moment-format offering.startDate "L LT"}}
                  -
                  {{moment-format offering.endDate "L LT"}}
                </td>
                <td class="text-left">
                  {{offering.room}}
                </td>
                <td class="text-left">
                  <ul>
                    {{#each (await offering.allInstructors) as |user|}}
                      <li>
                        {{user.fullName}}
                      </li>
                    {{/each}}
                  </ul>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{else}}
        <p>
          {{t "general.noOfferings"}}
        </p>
      {{/if}}
    </div>
  </section>
{{/each}}


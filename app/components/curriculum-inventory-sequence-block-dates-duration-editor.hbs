<div class="item start-date">
  <label>
    {{t "general.start"}}:
  </label>
  <PikadayInput
    @value={{startDate}}
    @onSelection={{action "changeStartDate"}}
    @format="M/D/YYYY"
  />
  {{#if
    (and (v-get this "startDate" "isInvalid") (contains "startDate" showErrorsFor))
  }}
    <span class="validation-error-message">
      {{v-get this "startDate" "message"}}
    </span>
  {{/if}}
</div>
<div class="item end-date">
  <label>
    {{t "general.end"}}:
  </label>
  <PikadayInput
    @value={{endDate}}
    @onSelection={{action "changeEndDate"}}
    @format="M/D/YYYY"
  />
  {{#if (and (v-get this "endDate" "isInvalid") (contains "endDate" showErrorsFor))}}
    <span class="validation-error-message">
      {{v-get this "endDate" "message"}}
    </span>
  {{/if}}
</div>
<div class="item duration">
  <label>
    {{t "general.durationInDays"}}:
  </label>
  <input
    type="text"
    value={{duration}}
    oninput={{action (mut duration) value="target.value"}}
    disabled={{isSaving}}
    onkeyup={{action "addErrorDisplayFor" "duration"}}
  >
  {{#if
    (and (v-get this "duration" "isInvalid") (contains "duration" showErrorsFor))
  }}
    <span class="validation-error-message">
      {{v-get this "duration" "message"}}
    </span>
  {{/if}}
</div>
<div class="buttons">
  <button class="done text" disabled={{or isSaving}} {{action "save"}}>
    {{#if isSaving}}
      <LoadingSpinner />
    {{else}}
      {{t "general.done"}}
    {{/if}}
  </button>
  <button class="cancel text" {{action "cancel"}}>
    {{t "general.cancel"}}
  </button>
</div>

<div class="year">
  <h2>
    <FaIcon @icon="backward" @click={{action "decrementYear"}} />
    {{year}}
    <FaIcon @icon="forward" @click={{action "incrementYear"}} />
  </h2>
</div>
{{#each weeksInYear as |week|}}
  <WeekGlance
    @collapsible={{true}}
    @collapsed={{not (contains week expandedWeeks)}}
    @year={{year}}
    @week={{week}}
    @toggleCollapsed={{action toggleOpenWeek week}}
  />
{{/each}}
<div class="year">
  <h2>
    <FaIcon @icon="backward" @click={{action "decrementYear"}} />
    {{year}}
    <FaIcon @icon="forward" @click={{action "incrementYear"}} />
  </h2>
</div>


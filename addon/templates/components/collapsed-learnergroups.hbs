<div class="title clickable" onclick={{action @expand}} role="button">
  {{t "general.learnerGroups"}} ({{get (await @subject.learnerGroups) "length"}})
</div>
<div class="collapsed-learnergroups-content">
  {{#if (is-fulfilled this.cohortSummaries)}}
    <table>
      <thead>
        <tr>
          <th colspan="4">
            {{t "general.cohort"}}
          </th>
          <th>
            {{t "general.learnerGroups"}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each (sort-by "title" (await this.cohortSummaries)) as |obj|}}
          <tr>
            <td colspan="4">
              {{obj.title}}
            </td>
            <td>
              {{obj.count}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <LoadingSpinner />
  {{/if}}
</div>

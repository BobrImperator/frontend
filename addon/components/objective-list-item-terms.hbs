<div
  class="objective-list-item-terms grid-item"
  data-test-objective-list-item-terms
>
  {{#if @isManaging}}
    <button
      type="button"
      class="bigadd"
      {{on "click" @save}}
        disabled={{@isSaving}}
        aria-label={{t "general.save"}}
        data-test-save
    >
      {{#if @isSaving}}
        <FaIcon @icon="spinner" @spin={{true}} />
      {{else}}
        <FaIcon @icon="check" />
      {{/if}}
    </button>
    <button
      type="button"
      class="bigcancel"
      {{on "click" @cancel}}
        aria-label={{t "general.cancel"}}
        data-test-cancel
    >
      <FaIcon @icon="undo" />
    </button>
  {{else}}
    <ul>
      {{#each (await @subject.associatedVocabularies) as |vocab|}}
        {{#if vocab.termCount}}
          <DetailTermsList
              @vocabulary={{vocab}}
              @terms={{await @subject.terms}}
              @canEdit={{false}}
              @manage={{@manage}}
          />
        {{/if}}
      {{else}}
        <li>
          {{#if @editable}}
            <button type="button" {{on "click" (fn @manage null)}} data-test-manage>
              {{t "general.addNew"}}
            </button>
          {{else}}
            {{t "general.none"}}
          {{/if}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>

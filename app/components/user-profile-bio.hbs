<div class="actions">
  {{#if isManaging}}
    <button class="bigadd" {{action (perform save)}}>
      <FaIcon
        @icon={{if save.isRunning "spinner" "check"}}
        @spin={{if save.isRunning true false}}
      />
    </button>
    <button
      disabled={{save.isRunning}}
      class="bigcancel"
      {{action (perform cancel)}}
    >
      <FaIcon @icon="undo" />
    </button>
  {{else if isManageable}}
    <button class="manage" {{action (perform manage)}}>
      <FaIcon @icon="edit" />
    </button>
  {{/if}}
</div>
{{#if (await usernameMissing)}}
  <div class="error">
    {{t "general.missingRequiredUsername"}}
  </div>
{{/if}}
<p class="primary-school">
  <strong>
    {{t "general.primarySchool"}}:
  </strong>
  {{get (await user.school) "title"}}
</p>
<div class="form">
  <div
    class="item
      {{if (contains "firstName" updatedFieldsFromSync) "synced-from-directory"
      }}"
  >
    <label>
      {{t "general.firstName"}}:
    </label>
    {{#if isManaging}}
      <input
        type="text"
        value={{firstName}}
        oninput={{action (mut firstName) value="target.value"}}
        onkeyup={{action "addErrorDisplayFor" "firstName"}}
        data-test-first-name-input
      >
      {{#if
        (and
          (v-get this "firstName" "isInvalid") (contains "firstName" showErrorsFor)
        )
      }}
        <span class="message error">
          {{v-get this "firstName" "message"}}
        </span>
      {{/if}}
    {{else}}
      <span class="value">
        {{user.firstName}}
      </span>
    {{/if}}
  </div>

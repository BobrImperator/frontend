<div class="detail-learningmaterials-header">
  <div class="title">
    {{#if isManaging}}
      <span class="specific-title">
        {{t "general.learningMaterialManageTitle"}}
      </span>
    {{else}}
      {{t "general.learningMaterials"}} ({{get (await subject.learningMaterials) "length"}})
    {{/if}}
  </div>
  {{#if displaySearchBox}}
    <LearningmaterialSearch
      @add={{action "addLearningMaterial"}}
      @currentMaterials={{parentMaterials}}
    />
  {{/if}}
  <div class="detail-learningmaterials-actions">
    {{#if displayAddNewForm}}
      <button class="collapse-button" {{action (mut displayAddNewForm) false}}>
        <FaIcon @icon="minus" />
      </button>
    {{else if (and editable (not isSorting) (not isManaging))}}
      <ActionMenu
        @title={{t "general.add"}}
        @icon={{false}}
        @classNames="blend-button right-edge"
      >
        <li role="button" {{action "addNewLearningMaterial" "file"}}>
          {{t "general.file"}}
        </li>
        <li role="button" {{action "addNewLearningMaterial" "link"}}>
          {{t "general.link"}}
        </li>
        <li role="button" {{action "addNewLearningMaterial" "citation"}}>
          {{t "general.citation"}}
        </li>
      </ActionMenu>
    {{/if}}
  </div>
</div>
<div class="detail-learningmaterials-content">
  {{#if isManaging}}
    <LearningmaterialManager
      @learningMaterial={{managingMaterial}}
      @isCourse={{isCourse}}
      @editable={{editable}}
      @closeManager={{action (mut managingMaterial) null}}
      @learningMaterialStatuses={{await learningMaterialStatuses}}
    />
  {{else if isSorting}}
    <LearningMaterialsSortManager
      @save={{action "saveSortOrder"}}
      @cancel={{action (mut isSorting) false}}
      @subject={{subject}}
    />
  {{else if displayAddNewForm}}
    <NewLearningmaterial
      @type={{type}}
      @learningMaterialStatuses={{await learningMaterialStatuses}}
      @learningMaterialUserRoles={{await learningMaterialUserRoles}}
      @save={{action "saveNewLearningMaterial"}}
      @cancel={{action (mut displayAddNewForm) false}}
    />
  {{else if (get (await subject.learningMaterials) "length")}}
    {{#if (and editable (await hasMoreThanOneLearningMaterial))}}
      <button class="sort-materials-btn" {{action (mut isSorting) true}}>
        {{t "general.sortMaterials"}}
      </button>
    {{/if}}
    <table>
      <thead>
        <tr>
          <th class="text-left" colspan="3">
            {{t "general.displayName"}}
          </th>
          <th class="text-center" colspan="2">
            {{t "general.owner"}}
          </th>
          <th class="text-center" colspan="2">
            {{t "general.required"}}
          </th>
          <th class="text-center" colspan="2">
            {{t "general.notes"}}
          </th>
          <th class="text-center" colspan="2">
            {{t "general.mesh"}}
          </th>
          <th class="text-center" colspan="2">
            {{t "general.status"}}
          </th>
          <th class="text-left" colspan="1">
            {{t "general.actions"}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each (await proxyMaterials) as |lmProxy|}}
          <tr class={{if lmProxy.showRemoveConfirmation "confirm-removal"}}>
            <td
              class="text-left clickable link"
              colspan="3"
              role="button"
              {{action (mut managingMaterial) lmProxy.content}}
            >
              <LmTypeIcon
                @type={{lmProxy.learningMaterial.type}}
                @mimetype={{lmProxy.learningMaterial.mimetype}}
              />
              <span data-test-title>
                {{lmProxy.learningMaterial.title}}
              </span>
            </td>
            <td class="text-center" colspan="2">
              {{lmProxy.learningMaterial.owningUser.fullName}}
            </td>
            <td class="text-center" colspan="2">
              {{#if lmProxy.required}}
                <span class="add">
                  {{t "general.yes"}}
                </span>
              {{else}}
                <span class="remove">
                  {{t "general.no"}}
                </span>
              {{/if}}
            </td>
            <td class="text-center" colspan="2">
              {{#if lmProxy.notes}}
                <span class="add">
                  {{t "general.yes"}}
                </span>
                {{#if lmProxy.publicNotes}}
                  <FaIcon @icon="eye" />
                {{/if}}
              {{else}}
                <span class="remove">
                  {{t "general.no"}}
                </span>
              {{/if}}
            </td>
            <td class="text-center" colspan="2">
              {{#if lmProxy.meshDescriptors.length}}
                <ul>
                  {{#each
                    (sort-by
                      "name" (await lmProxy.meshDescriptors)
                    ) as |descriptor|
                  }}
                    <li>
                      {{descriptor.name}}
                    </li>
                  {{/each}}
                </ul>
              {{else}}
                {{t "general.none"}}
              {{/if}}
            </td>
            <td class="text-center" colspan="2">
              {{lmProxy.learningMaterial.status.title}}
              <span data-test-status>
                {{value}}
              </span>
              {{#if (or lmProxy.startDate lmProxy.endDate)}}
                <FaIcon @icon="clock" @title={{t "general.timedRelease"}} />
              {{/if}}
            </td>
            <td class="text-left text-center" colspan="1">
              {{#if editable}}
                <span
                  class="clickable remove"
                  role="button"
                  {{action "confirmRemoval" lmProxy}}
                >
                  <FaIcon @icon="trash" class="enabled" />
                </span>
              {{else}}
                <FaIcon @icon="trash" class="disabled" />
              {{/if}}
            </td>
          </tr>
          {{#if lmProxy.showRemoveConfirmation}}
            <tr class="confirm-removal">
              <td colspan="14">
                <div class="confirm-message">
                  {{t "general.confirmRemoval"}}
                  <br>
                  <div class="confirm-buttons">
                    <button class="remove text" {{action "remove" lmProxy}}>
                      {{t "general.yes"}}
                    </button>
                    <button class="done text" {{action "cancelRemove" lmProxy}}>
                      {{t "general.cancel"}}
                    </button>
                  </div>
                </div>
              </td>
            </tr>
          {{/if}}
        {{/each}}
      </tbody>
    </table>
  {{/if}}
</div>
{{#if isSaving class="crossFade"}}
  <WaitSaving
    @showProgress={{true}}
    @totalProgress={{totalMaterialsToSave}}
    @currentProgress={{currentMaterialsSaved}}
  />
{{/if}}


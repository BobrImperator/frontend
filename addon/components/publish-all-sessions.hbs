<div
  class="publish-all-sessions"
  {{did-insert (perform this.load) @course.objectives}}
  {{did-update (perform this.load) @course.objectives}}
>
  <section class="publish-all-sessions-unpublishable">
    <div
      class="title {{if this.unPublishableCollapsed "collapsed" "collapsible"}}"
      role="button"
      {{on "click" (set this.unPublishableCollapsed (not this.unPublishableCollapsed))}}
    >
      {{t "general.incompleteSessions"}} ({{this.unPublishableSessions.length}})
    </div>
    {{#unless this.unPublishableCollapsed}}
      <div class="content">
        <table>
          <thead>
            <tr>
              <th>
                {{t "general.sessionTitle"}}
              </th>
              <th>
                {{t "general.offerings"}}
              </th>
              <th>
                {{t "general.terms"}}
              </th>
              <th>
                {{t "general.objectives"}}
              </th>
              <th>
                {{t "general.meshTerms"}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each this.unPublishableSessions as |session|}}
              <tr>
                <td>
                  {{session.title}}
                </td>
                {{#if session.offerings.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.offerings.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.terms.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.terms.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.objectives.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.objectives.length}})
                    {{#if session.showUnlinkIcon}}
                      <FaIcon
                        @icon="unlink"
                        class="clickable"
                        @click={{fn this.transitionToSession session}}
                      />
                    {{/if}}
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.meshDescriptors.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.meshDescriptors.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/unless}}
  </section>
  <section class="publish-all-sessions-publishable">
    <div
      class="title {{if this.publishableCollapsed "collapsed" "collapsible"}}"
      role="button"
      {{on "click" (set this.publishableCollapsed (not this.publishableCollapsed))}}
    >
      {{t "general.completeSessions"}} ({{this.publishableSessions.length}})
    </div>
    {{#unless this.publishableCollapsed}}
      <div class="content">
        <table>
          <thead>
            <tr>
              <th>
                {{t "general.sessionTitle"}}
              </th>
              <th>
                {{t "general.offerings"}}
              </th>
              <th>
                {{t "general.terms"}}
              </th>
              <th>
                {{t "general.objectives"}}
              </th>
              <th>
                {{t "general.meshTerms"}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each this.publishableSessions as |session|}}
              <tr>
                <td>
                  {{session.title}}
                </td>
                {{#if session.offerings.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.offerings.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.terms.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.terms.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.objectives.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.objectives.length}})
                    {{#if session.showUnlinkIcon}}
                      <FaIcon
                        @icon="unlink"
                        class="clickable"
                        @click={{fn this.transitionToSession session}}
                      />
                    {{/if}}
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.meshDescriptors.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.meshDescriptors.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/unless}}
  </section>
  <section class="publish-all-sessions-overridable">
    <div class="title">
      {{t "general.reviewSessions"}} ({{this.overridableSessions.length}})
    </div>
    <div class="content">
      {{#if this.overridableSessions.length}}
        <button type="button" disabled={{this.allSessionsAsIs}} {{on "click" this.publishAllAsIs}}>
          {{t "general.publishAsIs"}}
        </button>
        <button type="button" disabled={{this.noSessionsAsIs}} {{on "click" this.publishNoneAsIs}}>
          {{t "general.markAsScheduled"}}
        </button>
        <table>
          <thead>
            <tr>
              <th>
                {{t "general.actions"}}
              </th>
              <th>
                {{t "general.sessionTitle"}}
              </th>
              <th>
                {{t "general.offerings"}}
              </th>
              <th>
                {{t "general.terms"}}
              </th>
              <th>
                {{t "general.objectives"}}
              </th>
              <th>
                {{t "general.meshTerms"}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each this.overridableSessions as |session|}}
              <tr>
                <td>
                  <ul>
                    <li>
                      <label>
                        <input
                          type="checkbox"
                          checked={{contains session.id (map-by "id" this.sessionsToOverride)}}
                          {{on "click" (fn this.toggleSession session)}}
                        >
                        {{t "general.publishAsIs"}}
                      </label>
                    </li>
                    <li>
                      <label>
                        <input
                          type="checkbox"
                          checked={{not (contains session.id (map-by "id" this.sessionsToOverride))}}
                          {{on "click" (fn this.toggleSession session)}}
                        >
                          {{t "general.markAsScheduled"}}
                      </label>
                    </li>
                  </ul>
                </td>
                <td>
                  {{session.title}}
                </td>
                {{#if session.offerings.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.offerings.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.terms.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.terms.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.objectives.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.objectives.length}})
                    {{#if session.showUnlinkIcon}}
                      <FaIcon
                        @icon="unlink"
                        class="clickable"
                        @click={{fn this.transitionToSession session}}
                      />
                    {{/if}}
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
                {{#if session.meshDescriptors.length}}
                  <td class="yes">
                    {{t "general.yes"}} ({{session.meshDescriptors.length}})
                  </td>
                {{else}}
                  <td class="no">
                    {{t "general.no"}}
                  </td>
                {{/if}}
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}
    </div>
  </section>
  <div class="publish-all-sessions-review">
    {{#if this.showWarning}}
      <span class="unlinked-warning" data-test-unlinked-warning>
        {{t "general.unlinkedObjectives"}}
      </span>
      <FaIcon
        @icon="unlink"
        class="clickable"
        @click={{this.transitionToCourse}}
      />
      <FaIcon
        @icon="chart-bar"
        class="clickable"
        @click={{this.transitionToVisualizeObjectives}}
      />
    {{/if}}
    <p>
      {{t
        "general.publishAllConfirmation"
        publishCount=this.publishCount
        scheduleCount=this.scheduleCount
        ignoreCount=this.ignoreCount
      }}
    </p>
    <button type="button" {{on "click" (perform this.save)}}>
      {{t "general.go"}}
    </button>
  </div>
</div>


{{#if this.save.isRunning}}
  <WaitSaving
    @showProgress={{true}}
    @totalProgress={{this.totalSessionsToSave}}
    @currentProgress={{this.currentSessionsSaved}}
  />
{{/if}}

<section class="collapsed-stewards" ...attributes>
  <div class="title" {{action (action expand)}}>
    {{t "general.stewardingSchoolsAndDepartments"}}
    ({{get (await programYear.stewards) "length"}})
  </div>
  {{#if (is-pending schoolData)}}
    <LoadingSpinner @tagName="h3" />
  {{/if}}
  {{#if (is-fulfilled schoolData)}}
    <div class="content">
      <table class="condensed">
        <thead>
          <tr>
            <th class="text-center">
              {{t "general.school"}}
            </th>
            <th class="text-center">
              {{t "general.departments"}}
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each (sort-by "schoolTitle" (await schoolData)) as |obj|}}
            <tr>
              <td class="text-left">
                {{obj.schoolTitle}}
              </td>
              <td class="text-center">
                {{obj.departmentCount}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{/if}}
</section>

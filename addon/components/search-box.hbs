<div class="search-box" data-test-search-box>
  <input
    class="search-input"
    type="search"
    value={{this.value}}
    placeholder={{@placeholder}}
    {{on "input" (fn this.update)}}
    {{on "keyup" (fn this.keyUp)}}
    {{did-insert (set this.searchInput)}}
  >
  <span
    class="search-icon"
    role="button"
    {{on "click" (pipe-action (fn this.moveFocus) (perform this.searchTask))}}
  >
    <FaIcon @icon="search" />
  </span>
</div>

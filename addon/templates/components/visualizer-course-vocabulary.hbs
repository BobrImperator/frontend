{{#if (or @isIcon (gt (get (await this.data) "length") 0))}}
  <SimpleChart
    @name="horz-bar"
    @isIcon={{@isIcon}}
    @data={{await this.sortedData}}
    @hover={{perform this.barHover}}
    @leave={{perform this.barHover}}
    @click={{action "barClick"}} as |chart|
  >
    {{#if this.tooltipContent}}
      <chart.tooltip @title={{this.tooltipTitle}}>
        {{this.tooltipContent}}
      </chart.tooltip>
    {{/if}}
  </SimpleChart>
{{/if}}

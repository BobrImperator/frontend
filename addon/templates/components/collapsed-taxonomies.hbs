<div class="title" role="button" {{action (action this.expand)}}>
  {{t "general.terms"}} ({{this.subject.terms.length}})
</div>
{{#if (is-pending this.subject.associatedVocabularies)}}
  <LoadingSpinner @tagName="h3" />
{{else}}
  <div class="content">
    <table class="condensed">
      <thead>
        <tr>
          <th class="text-left">
            {{t "general.vocabulary"}}
          </th>
          <th class="text-center">
            {{t "general.school"}}
          </th>
          <th class="text-center">
            {{t "general.assignedTerms"}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each (await this.subject.associatedVocabularies) as |vocab|}}
          <tr>
            <td class="text-left">
              {{vocab.title}}
            </td>
            <td class="text-center">
              {{vocab.school.title}}
            </td>
            <td class="text-center">
              {{intersection-count this.subject.terms vocab.terms}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}

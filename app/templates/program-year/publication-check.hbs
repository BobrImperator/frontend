<div class="backtolink">
  <LinkTo @route="programYear" @model={{@model}}>
    {{t "general.backToProgramYear"}}
  </LinkTo>
</div>
<div class="programyear-publication-check">
  <section>
    <div class="detail-title">
      {{t "general.missingItems"}}
      ({{@model.allPublicationIssuesLength}})
    </div>
    <div class="detail-content">
      <table>
        <thead>
          <tr>
            <th>
              {{t "general.matriculationYear"}}
            </th>
            <th>
              {{t "general.directors"}}
            </th>
            <th>
              {{t "general.terms"}}
            </th>
            <th>
              {{t "general.competencies"}}
            </th>
            <th>
              {{t "general.objectives"}}
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              {{@model.academicYear}}
            </td>
            {{#if @model.directors.length}}
              <td class="yes">
                {{t "general.yes"}}
                ({{@model.directors.length}})
              </td>
            {{else}}
              <td class="no">
                {{t "general.no"}}
              </td>
            {{/if}}
            {{#if @model.terms.length}}
              <td class="yes">
                {{t "general.yes"}}
                ({{@model.terms.length}})
              </td>
            {{else}}
              <td class="no">
                {{t "general.no"}}
              </td>
            {{/if}}
            {{#if @model.competencies.length}}
              <td class="yes">
                {{t "general.yes"}}
                ({{@model.competencies.length}})
              </td>
            {{else}}
              <td class="no">
                {{t "general.no"}}
              </td>
            {{/if}}
            {{#if (has-many-length @model "programYearObjectives")}}
              <td class="yes">
                {{t "general.yes"}}
                ({{has-many-length @model "programYearObjectives"}})
              </td>
            {{else}}
              <td class="no">
                {{t "general.no"}}
              </td>
            {{/if}}
          </tr>
        </tbody>
      </table>
    </div>
  </section>
</div>

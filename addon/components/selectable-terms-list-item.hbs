<div
  class="selectable-terms-list-item {{if this.isSelected "selected"}}"
  role="button"
  {{on "click" this.click}}
  {{mouse-hover-toggle (set this.isHovering)}}
  {{ref this "theElement"}}
>
  {{#if (and this.theElement this.showTooltip)}}
    <IliosTooltip @target={{this.theElement}}>
      {{@term.description}}
    </IliosTooltip>
  {{/if}}
  {{@term.title}}
  <span class="actions">
    {{#if this.isSelected}}
      <FaIcon @icon="times" />
    {{else}}
      <FaIcon @icon="plus" class="add" />
    {{/if}}
  </span>
</div>

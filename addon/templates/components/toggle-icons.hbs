<div class="accessible">
  <input
    type="radio"
    id={{concat "first-toggle-" this.elementId}}
    name={{concat "toggle-" this.elementId}}
    checked={{eq this.firstOptionSelected true}}
    onclick={{action "firstChoice"}}
  >
  <label for={{concat "first-toggle-" this.elementId}}>
    {{this.firstLabel}}
  </label>
  <input
    type="radio"
    id={{concat "second-toggle-" this.elementId}}
    name={{concat "toggle-" this.elementId}}
    checked={{eq this.firstOptionSelected false}}
    onclick={{action "secondChoice"}}
  >
  <label for={{concat "second-toggle-" this.elementId}}>
    {{this.secondLabel}}
  </label>
</div>
<div class="icons">
  {{#if this.firstOptionSelected}}
    <FaIcon
      @icon={{this.firstIcon}}
      class="first"
      @title={{this.secondLabel}}
      @click={{action "secondChoice"}}
    />
  {{else}}
    <FaIcon
      @icon={{this.secondIcon}}
      class="second"
      @title={{this.firstLabel}}
      @click={{action "firstChoice"}}
    />
  {{/if}}
</div>

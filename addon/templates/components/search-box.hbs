<input
  class="search-input"
  type="search"
  value={{this.value}}
  placeholder={{@placeholder}}
  {{on "input" (action "update" value="target.value")}}
>
<span
  class="search-icon"
  role="button"
  {{on "click" (pipe-action (action "focus") (perform this.searchTask))}}
>
  <FaIcon @icon="search" />
</span>

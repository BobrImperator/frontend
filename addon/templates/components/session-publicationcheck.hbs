<SessionOverview
  @course={{await this.session.course}}
  @session={{this.session}}
  @showCheckLink={{false}}
  @sessionTypes={{await this.session.course.school.sessionTypes}}
/>
<div class="back-to-session">
  <LinkTo
    @route="session.index"
    @models={{array (await this.session.course) this.session}}
  >
    <FaIcon @icon="undo" />
    {{t "general.backToTitle" title=this.session.title}}
  </LinkTo>
</div>
<div class="results">
  <div class="title">
    {{t "general.missingItems"}} ({{this.session.allPublicationIssuesLength}})
  </div>
  <div class="session-publicationcheck-content">
    <table>
      <thead>
        <tr>
          <th>
            {{t "general.sessionTitle"}}
          </th>
          <th>
            {{t "general.offerings"}}
          </th>
          <th>
            {{t "general.terms"}}
          </th>
          <th>
            {{t "general.objectives"}}
          </th>
          <th>
            {{t "general.meshTerms"}}
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            {{this.session.title}}
          </td>
          {{#if this.session.offerings.length}}
            <td class="yes">
              {{t "general.yes"}} ({{this.session.offerings.length}})
            </td>
          {{else}}
            <td class="no">
              {{t "general.no"}}
            </td>
          {{/if}}
          {{#if this.session.terms.length}}
            <td class="yes">
              {{t "general.yes"}} ({{this.session.terms.length}})
            </td>
          {{else}}
            <td class="no">
              {{t "general.no"}}
            </td>
          {{/if}}
          {{#if this.session.objectives.length}}
            <td class="yes">
              {{t "general.yes"}} ({{this.session.objectives.length}})
              {{#if this.showUnlinkIcon}}
                <FaIcon
                  @icon="unlink"
                  class="clickable"
                  @click={{action "transitionToSession"}}
                />
              {{/if}}
            </td>
          {{else}}
            <td class="no">
              {{t "general.no"}}
            </td>
          {{/if}}
          {{#if this.session.meshDescriptors.length}}
            <td class="yes">
              {{t "general.yes"}} ({{this.session.meshDescriptors.length}})
            </td>
          {{else}}
            <td class="no">
              {{t "general.no"}}
            </td>
          {{/if}}
        </tr>
      </tbody>
    </table>
  </div>
</div>


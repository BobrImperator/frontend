<div class="material-list">
  <span class="course-filter">
    <select {{on "change" (action @setCourseIdFilter value="target.value")}}>
      <option value="">
        {{t "general.allCourses"}}
      </option>
      {{#each (await this.courses) as |courseObj|}}
        <option
          selected={{is-equal courseObj.id @courseIdFilter}}
          value={{courseObj.id}}
        >
          {{courseObj.title}}
        </option>
      {{/each}}
    </select>
  </span>
  <span class="filter">
    <input
      data-test-filter-input
      placeholder={{t "general.filterPlaceholder"}}
      type="text"
      value={{@filter}}
      {{on "input" (perform this.setQuery value="target.value")}}
    >
  </span>
  <table>
    <thead>
      <tr>
        <SortableTh
          @colspan={{3}}
          @sortedAscending={{this.sortedAscending}}
          @sortedBy={{or
            (eq @sortBy "sessionTitle")
            (eq @sortBy "sessionTitle:desc")
          }}
          @click={{action "sortBy" "sessionTitle"}}
        >
          {{t "general.session"}}
        </SortableTh>
        <SortableTh
          @colspan={{3}}
          @sortedAscending={{this.sortedAscending}}
          @sortedBy={{or
            (eq @sortBy "courseTitle")
            (eq @sortBy "courseTitle:desc")
          }}
          @click={{action "sortBy" "courseTitle"}}
        >
          {{t "general.course"}}
        </SortableTh>
        <SortableTh
          @colspan={{3}}
          @sortedAscending={{this.sortedAscending}}
          @sortedBy={{or (eq @sortBy "title") (eq @sortBy "title:desc")}}
          @click={{action "sortBy" "title"}}
        >
          {{t "general.title"}}
        </SortableTh>
        <th class="hide-from-small-screen">
          {{t "general.instructor"}}
        </th>
        <SortableTh
          @colspan={{1}}
          @sortedAscending={{this.sortedAscending}}
          @sortedBy={{or
            (eq @sortBy "firstOfferingDate")
            (eq @sortBy "firstOfferingDate:desc")
          }}
          @sortType="numeric"
          @click={{action "sortBy" "firstOfferingDate"}}
        >
          {{t "general.date"}}
        </SortableTh>
      </tr>
    </thead>
    <tbody>
      {{#if (is-pending @materials)}}
        <tr>
          <td class="text-center" colspan="11">
            <FaIcon @icon="spinner" class="orange" @size="2x" @spin={{true}} />
          </td>
        </tr>
      {{else}}
        {{#each (sort-by @sortBy (await this.filteredMaterials)) as |lmObject|}}
          <tr>
            <td colspan="3" data-test-session-title>
              {{lmObject.sessionTitle}}
            </td>
            <td colspan="3" data-test-course-title>
              {{lmObject.courseTitle}}
            </td>
            <td colspan="3" data-test-title>
              {{#if lmObject.isBlanked}}
                <span class="lm-type-icon">
                  <FaIcon @icon="clock" @title={{t "general.timedRelease"}} />
                </span>
                {{lmObject.title}}
                <span class="timed-release-info">
                  <TimedReleaseSchedule
                    @endDate={{lmObject.endDate}}
                    @startDate={{lmObject.startDate}}
                  />
                </span>
              {{else}}
                <LmTypeIcon
                  @mimetype={{lmObject.mimetype}}
                  @type={{lm-type lmObject}}
                />
                {{#if lmObject.absoluteFileUri}}
                  {{#if (eq lmObject.mimetype "application/pdf")}}
                    <a href="{{lmObject.absoluteFileUri}}?inline">
                      {{lmObject.title}}
                    </a>
                    <a
                      href={{lmObject.absoluteFileUri}}
                      rel="noopener"
                      target="_blank"
                    >
                      <FaIcon
                        @icon="download"
                        @title={{t "general.download"}}
                      />
                    </a>
                  {{else}}
                    <a
                      href={{lmObject.absoluteFileUri}}
                      rel="noopener"
                      target="_blank"
                    >
                      {{lmObject.title}}
                    </a>
                  {{/if}}
                {{else if lmObject.link}}
                  <a href={{lmObject.link}} rel="noopener" target="_blank">
                    {{lmObject.title}}
                  </a>
                {{else}}
                  {{lmObject.title}}
                  <br>
                  <small>
                    {{lmObject.citation}}
                  </small>
                {{/if}}
              {{/if}}
            </td>
            <td class="hide-from-small-screen" colspan="1" data-test-instructor>
              <TruncateText
                @length={{25}}
                @text={{join
                  ", "
                  (sort-by (action "sortString") lmObject.instructors)
                }}
              />
            </td>
            <td data-test-date>
              {{#if lmObject.firstOfferingDate}}
                {{moment-format lmObject.firstOfferingDate "L"}}
              {{else}}
                {{t "general.none"}}
              {{/if}}
            </td>
          </tr>
        {{else}}
          <tr>
            <td align="center" colspan="11" data-test-none>
              {{t "general.none"}}
            </td>
          </tr>
        {{/each}}
      {{/if}}
    </tbody>
  </table>
</div>

{{#if isSaving}}
  <h3 class="center">
    <LoadingSpinner />
  </h3>
{{else}}
  <div class="item">
    <label>
      {{t "general.numberOfGroups"}}:
    </label>
    <input
      type="text"
      value={{numSubGroups}}
      oninput={{action (mut numSubGroups) value="target.value"}}
      disabled={{isSaving}}
      onkeyup={{action "addErrorDisplayFor" "numSubGroups"}}
      placeholder={{t "general.numberOfGroupsToGenerate"}}
    >
    {{#if
      (and
        (v-get this "numSubGroups" "isInvalid")
        (contains "numSubGroups" showErrorsFor)
      )
    }}
      <span class="validation-error-message">
        {{v-get this "numSubGroups" "message"}}
      </span>
    {{/if}}
  </div>
  <div class="buttons">
    <button type="button" class="done text" {{action "save"}}>
      {{t "general.done"}}
    </button>
    <button type="button" class="cancel text" {{action cancel}}>
      {{t "general.cancel"}}
    </button>
  </div>
{{/if}}

<div class="program-header" ...attributes data-test-program-header>
  <div class="title" data-test-title>
    <h4>
      {{#if canUpdate}}
        <EditableField
          @value={{programTitle}}
          @save={{action "changeTitle"}}
          @close={{action "revertTitleChanges"}}
          @saveOnEnter={{true}}
          @closeOnEscape={{true}} as |isSaving|
        >
          <input
            type="text"
            value={{programTitle}}
            oninput={{action (mut programTitle) value="target.value"}}
            disabled={{isSaving}}
            onkeyup={{action "addErrorDisplayFor" "programTitle"}}
          >
          {{#if
            (and
              (v-get this "programTitle" "isInvalid")
              (includes "programTitle" showErrorsFor)
            )
          }}
            <span class="validation-error-message">
              {{v-get this "programTitle" "message"}}
            </span>
          {{/if}}
        </EditableField>
      {{else}}
        {{this.programTitle}}
      {{/if}}
    </h4>
  </div>
</div>

{{#if (get (await instructors) "length")}}
  <h4>
    {{t "general.instructors"}}
    ({{get (await instructors) "length"}})
  </h4>
  <ul data-test-instructors>
    {{#each (sort-by "fullName" (await instructors)) as |user|}}
      <li role="button" {{action "removeInstructor" user}}>
        {{user.fullName}}
        <FaIcon @icon="times" class="remove" />
      </li>
    {{/each}}
  </ul>
{{/if}}

{{#if (get (await instructorGroups) "length")}}
  <h4>
    {{t "general.instructorGroups"}}
    ({{get (await instructorGroups) "length"}})
  </h4>
  <ul data-test-instructor-groups>
    {{#each (sort-by "title" (await instructorGroups)) as |instructorGroup|}}
      <li role="button" {{action "removeInstructorGroup" instructorGroup}}>
        <FaIcon @icon="users" />
        {{instructorGroup.title}}
        <FaIcon @icon="times" class="remove" />
      </li>
    {{/each}}
  </ul>
  <h5>
    {{t "general.instructorGroupMembers"}}
    ({{get (await this.instructorGroupMembers) "length"}})
  </h5>
  <ul data-test-instructor-group-members>
    {{#each (await this.instructorGroupMembers) as |instructorGroupMember|}}
      <li>
        {{instructorGroupMember.fullName}}
      </li>
    {{/each}}
  </ul>
{{/if}}

<UserSearch
  @addUser={{action "addInstructor"}}
  @addInstructorGroup={{action "addInstructorGroup"}}
  @currentlyActiveUsers={{instructors}}
  placeholder={{t "general.findInstructorOrGroup"}}
  @availableInstructorGroups={{await availableInstructorGroups}}
  @currentlyActiveInstructorGroups={{instructorGroups}}
/>


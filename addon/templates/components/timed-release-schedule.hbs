{{#if (and this.startDate this.endDate this.endDateInTheFuture)}}
  ({{t
    "general.timedReleaseStartAndEndDate"
    startDate=(moment-format this.startDate "L LT")
    endDate=(moment-format this.endDate "L LT")
  }})
{{/if}}
{{#if (and this.startDate (not this.endDate) this.startDateInTheFuture)}}
  ({{t
    "general.timedReleaseOnlyStartDate"
    startDate=(moment-format this.startDate "L LT")
  }})
{{/if}}
{{#if (and this.endDate (not this.startDate) this.endDateInTheFuture)}}
  ({{t "general.timedReleaseOnlyEndDate" endDate=(moment-format this.endDate "L LT")}})
{{/if}}
{{#if (and (not this.startDate) (not this.endDate) this.showNoSchedule)}}
  {{t "general.timedReleaseNoSchedule"}}
{{/if}}

<table>
  <thead>
    <tr>
      {{#if this.showDirectors}}
        <th>
          {{t "general.directors"}}
        </th>
      {{/if}}
      {{#if this.showAdministrators}}
        <th>
          {{t "general.administrators"}}
        </th>
      {{/if}}
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#if this.showDirectors}}
        <td class="text-top" data-test-directors>
          <ul>
            {{#each (sort-by "lastName" "firstName" this.directors) as |user|}}
              <li>
                <FaIcon
                  @icon="times"
                  class="clickable remove"
                  @click={{action this.removeDirector user}}
                />
                {{#unless user.enabled}}
                  <FaIcon
                    @icon="user-times"
                    @title={{t "general.disabled"}}
                    class="disabled-user"
                  />
                {{/unless}}
                <span data-test-name>
                  {{user.fullName}}
                </span>
              </li>
            {{else}}
              {{t "general.none"}}
            {{/each}}
          </ul>
        </td>
      {{/if}}
      {{#if this.showAdministrators}}
        <td class="text-top" data-test-administrators>
          <ul>
            {{#each (sort-by "lastName" "firstName" this.administrators) as |user|}}
              <li>
                <FaIcon
                  @icon="times"
                  class="clickable remove"
                  @click={{action this.removeAdministrator user}}
                />
                {{#unless user.enabled}}
                  <FaIcon
                    @icon="user-times"
                    @title={{t "general.disabled"}}
                    class="disabled-user"
                  />
                {{/unless}}
                <span data-test-name>
                  {{user.fullName}}
                </span>
              </li>
            {{else}}
              {{t "general.none"}}
            {{/each}}
          </ul>
        </td>
      {{/if}}
    </tr>
    <tr>
      {{#if this.showDirectors}}
        <td data-test-director-search>
          <LeadershipSearch
            @existingUsers={{this.directors}}
            @selectUser={{this.addDirector}}
          />
        </td>
      {{/if}}
      {{#if this.showAdministrators}}
        <td data-test-administrator-search>
          <LeadershipSearch
            @existingUsers={{this.administrators}}
            @selectUser={{this.addAdministrator}}
          />
        </td>
      {{/if}}
    </tr>
  </tbody>
</table>


<table
  class="instructor-groups-list"
  ...attributes
  data-test-instructor-groups-list
>
  <thead>
    <tr>
      <th class="text-left" colspan="2">
        {{t "general.instructorGroupTitle"}}
      </th>
      <th class="text-center hide-from-small-screen">
        {{t "general.members"}}
      </th>
      <th class="text-center hide-from-small-screen">
        {{t "general.associatedCourses"}}
      </th>
        <th class="text-right">
        {{t "general.actions"}}
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each @instructorGroups as |instructorGroup|}}
      <InstructorGroups::ListItem @instructorGroup={{instructorGroup}} />
    {{else}}
      <tr data-test-empty-list>
        <td class="text-center" colspan={{if (media "isLaptopAndUp") "5" "3"}}>
          {{if @query (t "general.noResultsFound") (t "general.none")}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<span class="toggle-yesno" data-test-toggle-yesno>
  <input
    checked={{this.yes}}
    type="checkbox"
    class="switch-input"
    disabled="disabled"
  >
  <span
    class="switch-label"
    role="button"
    data-on={{t "general.yes"}}
    data-off={{t "general.no"}}
    {{on "click" (fn this.click)}}
  ></span>
  <span class="switch-handle" role="button" {{on "click" (fn this.click)}} data-test-handle></span>
</span>

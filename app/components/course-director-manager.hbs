<div class="actions">
  <button class="bigadd" {{action (perform saveChanges)}}>
    <FaIcon
      @icon={{if saveChanges.isRunning "spinner" "check"}}
      @spin={{if saveChanges.isRunning true false}}
    />
  </button>
  <button class="bigcancel" {{action close}}>
    <FaIcon @icon="undo" />
  </button>
</div>
<div class="selected-directors">
  <ul>
    {{#each (sort-by "lastName" directors) as |user|}}
      <li {{action "removeDirector" user}}>
        {{user.fullName}}
        <FaIcon @icon="times" class="remove" />
      </li>
    {{/each}}
  </ul>
</div>
<UserSearch
  @addUser={{action "addDirector"}}
  @roles="1"
  @currentlyActiveUsers={{directors}}
/>

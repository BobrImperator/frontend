{{#if selectedTerms}}
  <div class="selected-terms">
    {{#each (await listableVocabularies) as |vocab|}}
      <DetailTermsList
        @vocabulary={{vocab}}
        @terms={{selectedTerms}}
        @canEdit={{true}}
        @remove={{action "remove"}}
      />
    {{/each}}
  </div>
{{/if}}
{{#if (get (await assignableVocabularies) "length")}}
  <div class="vocabulary-picker">
    <div>
      <label>
        {{t "general.selectVocabulary"}}:
      </label>
      <select
        onchange={{action "changeSelectedVocabulary" value="target.value"}}
      >
        {{#each (await assignableVocabularies) as |vocab|}}
          <option value={{vocab.id}}>
            {{vocab.title}} ({{vocab.school.title}})
          </option>
        {{/each}}
      </select>
    </div>
    <input
      type="search"
      value={{termFilter}}
      placeholder={{t "general.filterPlaceholder"}}
      oninput={{perform setTermFilter value="target.value"}}
    >
  </div>
  <div class="terms-picker tag-tree">
    <SelectableTermsList
      @selectedTerms={{selectedTerms}}
      @terms={{await filteredTerms}}
      @add={{action "add"}}
      @remove={{action "remove"}}
    />
  </div>
{{/if}}


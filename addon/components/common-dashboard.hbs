<section class="common-dashboard" data-test-common-dashboard>
  <DashboardViewPicker @show={{@show}} @change={{@setShow}} />
  {{#if (eq @show "calendar")}}
    <DashboardCalendar
      @allSchools={{@allSchools}}
      @allAcademicYears={{@allAcademicYears}}
      @selectedDate={{@selectedDate}}
      @selectedView={{@selectedView}}
      @mySchedule={{@mySchedule}}
      @showFilters={{@showFilters}}
      @changeDate={{@changeDate}}
      @changeView={{@changeView}}
      @selectEvent={{@selectEvent}}
      @toggleMySchedule={{@toggleMySchedule}}
      @toggleShowFilters={{@toggleShowFilters}}
      @selectedAcademicYear={{@selectedAcademicYear}}
      @selectedSchool={{@selectedSchool}}
      @changeAcademicYear={{@changeAcademicYear}}
      @changeSchool={{@changeSchool}}
      @courseFilters={{@courseFilters}}
      @toggleCourseFilters={{@toggleCourseFilters}}
      @selectedCohorts={{@selectedCohorts}}
      @selectedCourseLevels={{@selectedCourseLevels}}
      @selectedCourses={{@selectedCourses}}
      @selectedSessionTypes={{@selectedSessionTypes}}
      @selectedTerms={{@selectedTerms}}
      @clearFilters={{@clearFilters}}
      @updateCohorts={{@updateCohorts}}
      @updateCourseLevels={{@updateCourseLevels}}
      @updateCourses={{@updateCourses}}
      @updateSessionTypes={{@updateSessionTypes}}
      @updateTerms={{@updateTerms}}
    />
  {{else if (eq @show "materials")}}
    <DashboardMaterials />
  {{else if (eq @show "agenda")}}
    <DashboardAgenda />
  {{else if (eq @show "week")}}
    <DashboardWeek />
  {{/if}}
</section>

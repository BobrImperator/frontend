{{#liquid-if unableToReconnect class="crossFade"}}
  <span>
    <FaIcon @icon="exclamation-triangle" />
    {{t "general.unableToReconnect"}}
  </span>
{{else}}
  <span>
    <FaIcon @icon="exclamation-circle" />
    {{t "general.connectionLost"}}
    {{#unless stopAttemptingToReconnect}}
      {{t "general.reconnectionSeconds" count=timer}}
    {{/unless}}
  </span>
  <div class="buttons">
    <button type="button" {{action (perform reconnect true)}}>
      {{t "general.reconnectNow"}}
    </button>
    {{#unless stopAttemptingToReconnect}}
      <button type="button" {{action (toggle "stopAttemptingToReconnect" this)}}>
        {{t "general.ignore"}}
      </button>
    {{/unless}}
  </div>
{{/liquid-if}}

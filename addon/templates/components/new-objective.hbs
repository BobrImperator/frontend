<h4>
  {{t "general.newObjective"}}
</h4>
<div class="new-objective-form">
  <div class="item">
    <label class="form-label">
      {{t "general.description"}}:
    </label>
    <div class="form-data form-data-text form-input-row">
      <HtmlEditor @content={{this.title}} @update={{action "changeTitle"}} />
      {{#if (and (v-get this "title" "isInvalid") (is-in this.showErrorsFor "title"))
      }}
        <span class="validation-error-message">
          {{v-get this "title" "message"}}
        </span>
      {{/if}}
    </div>
  </div>
  <div class="buttons">
    <button
      disabled={{or
        this.isSaving
        (and (v-get this "title" "isInvalid") (is-in this.showErrorsFor "title"))
      }}
      class="done text"
      {{action "save"}}
    >
      {{#if this.isSaving}}
        <LoadingSpinner />
      {{else}}
        {{t "general.done"}}
      {{/if}}
    </button>
    <button class="cancel text" {{action this.cancel}}>
      {{t "general.cancel"}}
    </button>
  </div>
</div>

<div class="title" role="button" {{action (action expand)}}>
  {{t "general.competencies"}} ({{get (await subject.competencies) "length"}})
</div>
{{#unless (is-fulfilled summary)}}
  <LoadingSpinner @tagName="h3" />
{{else}}
  <div class="content">
    <table>
      <thead>
        <tr>
          <th class="text-left">
            {{t "general.school"}}
          </th>
          <th class="text-center">
            {{t "general.competencies"}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each (await summary) as |item|}}
          <tr>
            <td>
              {{item.school.title}}
            </td>
            <td class="text-center">
              {{item.competencies.length}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/unless}}


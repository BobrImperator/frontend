<div class="session-leadership-expanded-header">
  <div class="title collapsible clickable" role="button" {{action this.collapse}}>
    {{t "general.sessionAdministration"}}
  </div>
  <div class="actions">
    {{#if this.isManaging}}
      <button class="bigadd" onclick={{perform this.save}}>
        <FaIcon
          @icon={{if this.save.isRunning "spinner" "check"}}
          @spin={{if this.isSaving true false}}
        />
      </button>
      <button class="bigcancel" {{action this.setIsManaging false}}>
        <FaIcon @icon="undo" />
      </button>
    {{else if this.canUpdate}}
      <button {{action this.setIsManaging true}}>
        {{t "general.manageLeadership"}}
      </button>
    {{/if}}
  </div>
</div>
<div class="session-leadership-expanded-content">
  {{#if (is-array this.administrators)}}
    {{#if this.isManaging}}
      <LeadershipManager
        @showDirectors={{false}}
        @administrators={{this.administrators}}
        @removeAdministrator={{action "removeAdministrator"}}
        @addAdministrator={{action "addAdministrator"}}
      />
    {{else}}
      <LeadershipList
        @showDirectors={{false}}
        @administrators={{this.administrators}}
      />
    {{/if}}
  {{else}}
    <LoadingSpinner @tagName="h3" />
  {{/if}}
</div>


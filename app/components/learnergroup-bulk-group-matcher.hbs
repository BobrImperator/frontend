<td>
  <span data-test-group-name>
    {{groupName}}
  </span>
  {{#if noGroupWithThisName}}
    <button data-test-create-group {{action createGroup groupName}}>
      {{t "general.createNewGroup" title=groupName}}
    </button>
  {{/if}}
</td>
<td>
  <select
    onchange={{action "matchGroup" value="target.value"}}
    id="sub-group-{{elementId}}"
  >
    <option value="null" selected={{is-equal null matchedGroupId}}></option>
    {{#each groups as |learnerGroup|}}
      <option
        value={{learnerGroup.id}}
        selected={{is-equal learnerGroup.id matchedGroupId}}
      >
        {{learnerGroup.title}}
      </option>
    {{/each}}
  </select>
</td>

<th
  class="sortable-th sortable text-{{this.align}} {{if this.hideFromSmallScreen "hide-from-small-screen"}}"
  colspan={{this.colspan}}
  aria-sort={{if this.sortedBy (if this.sortedAscending "ascending" "descending") "none"}}
  ...attributes
>
  <button
    type="button"
    title={{this.title}}
    {{on "click" this.click}}
  >
    {{yield}}<FaIcon @icon={{this.sortIcon}} />
  </button>
</th>


{{! template-lint-disable no-invalid-interactive}}
<span
  class={{if this.selectable "clickable"}}
  onclick={{if this.selectable (action add @learnerGroup)}}
  role={{if this.selectable "button"}}
>
  {{@learnerGroup.title}}
</span>
{{#if @learnerGroup.children.length}}
  <ul>
    {{#if (is-fulfilled @learnerGroup.children)}}
      {{#each (sort-by "title" (await @learnerGroup.children)) as |child|}}
        <LearnergroupTree
          @learnerGroup={{child}}
          @selectedGroups={{@selectedGroups}}
          @filter={{@filter}}
          @add={{@add}}
        />
      {{/each}}
    {{else}}
      <li>
        <LoadingSpinner />
      </li>
    {{/if}}
  </ul>
{{/if}}

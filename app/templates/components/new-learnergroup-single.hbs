<div class="item">
  <label>
    {{t "general.title"}}
    :
  </label>
  <input
    type="text"
    value={{title}}
    oninput={{action (mut title) value="target.value"}}
    disabled={{isSaving}}
    onkeyup={{action "addErrorDisplayFor" "title"}}
    placeholder={{t "general.learnerGroupTitlePlaceholder"}}
  >
  {{#if (and (v-get this "title" "isInvalid") (is-in showErrorsFor "title"))}}
    <span class="validation-error-message">
      {{v-get this "title" "message"}}
    </span>
  {{/if}}
</div>
{{#if fillModeSupported}}
  <div class="item">
    <label>
      {{t "general.populateGroup"}}
      :
    </label>
    <div class="clickable" onclick={{toggle "fillWithCohort" this}}>
      <input checked={{fillWithCohort}} type="radio">
      {{t "general.yesPopulateGroup"}}
    </div>
    <div class="clickable" onclick={{toggle "fillWithCohort" this}}>
      <input checked={{not fillWithCohort}} type="radio">
      {{t "general.noPopulateGroup"}}
    </div>
  </div>
{{/if}}
<div class="buttons">
  <button class="done text" {{action "save"}}>
    {{#if isSaving}}
      <LoadingSpinner />
    {{else}}
      {{t "general.done"}}
    {{/if}}
  </button>
  <button class="cancel text" {{action cancel}}>
    {{t "general.cancel"}}
  </button>
</div>
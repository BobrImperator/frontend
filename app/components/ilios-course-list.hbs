<div
  data-test-ilios-course-list
  ...attributes
>
  {{#unless this.load.isRunning}}
    <table>
      <thead>
        <tr data-test-course-headings>
          <SortableTh
            data-test-course-title-heading
            @colspan="8"
            @sortedAscending={{this.sortedAscending}}
            @sortedBy={{or (eq @sortBy "title") (eq @sortBy "title:desc")}}
            @onClick={{fn this.setSortBy "title"}}
          >
            {{t "general.courseTitle"}}
          </SortableTh>
          <SortableTh
            @align="center"
            @colspan="1"
            @hideFromSmallScreen={{true}}
            @sortedAscending={{this.sortedAscending}}
            @sortedBy={{or (eq @sortBy "level") (eq @sortBy "level:desc")}}
            @sortType="numeric"
            @onClick={{fn this.setSortBy "level"}}
          >
            {{t "general.level"}}
          </SortableTh>
          <SortableTh
            @align="center"
            @colspan="2"
            @hideFromSmallScreen={{true}}
            @sortedAscending={{this.sortedAscending}}
            @sortedBy={{or (eq @sortBy "startDate") (eq @sortBy "startDate:desc")}}
            @sortType="numeric"
            @onClick={{fn this.setSortBy "startDate"}}
          >
            {{t "general.startDate"}}
          </SortableTh>
          <SortableTh
            @align="center"
            @colspan="2"
            @hideFromSmallScreen={{true}}
            @sortedAscending={{this.sortedAscending}}
            @sortedBy={{or (eq @sortBy "endDate") (eq @sortBy "endDate:desc")}}
            @sortType="numeric"
            @onClick={{fn this.setSortBy "endDate"}}
          >
            {{t "general.endDate"}}
          </SortableTh>
          <SortableTh
            @align="right"
            @colspan="2"
            @sortedAscending={{this.sortedAscending}}
            @sortedBy={{or (eq @sortBy "status") (eq @sortBy "status:desc")}}
            @onClick={{fn this.setSortBy "status"}}
          >
            {{t "general.status"}}
          </SortableTh>
        </tr>
      </thead>
      <tbody data-test-courses>
        {{#each (sort-by (if this.sortingByStatus this.sortCoursesByStatus @sortBy) @courses) as |course|}}
          <tr
            class={{if (includes course.id this.coursesForRemovalConfirmation) "confirm-removal"}}
            data-test-active-row
          >
            <td class="text-left" colspan="8" data-test-course-title>
              <LinkTo @route="course" @model={{course}}>
                {{course.title}}
                {{#if course.externalId}}
                  ({{course.externalId}})
                {{/if}}
              </LinkTo>
            </td>
            <td class="text-center hide-from-small-screen" colspan="1" data-test-level>
              {{course.level}}
            </td>
            <td class="text-center hide-from-small-screen" colspan="2" data-test-start-date>
              {{moment-format course.startDate "L"}}
            </td>
            <td class="text-center hide-from-small-screen" colspan="2" data-test-end-date>
              {{moment-format course.endDate "L"}}
            </td>
            <td class="text-right" colspan="2" data-test-status>
              {{#if (includes course.id this.savingCourseIds)}}
                <LoadingSpinner />
              {{else}}
                <PublicationStatus @item={{course}} @showText={{media "isLaptopAndUp"}} @showIcon={{not (media "isLaptopAndUp")}} />
                {{#if course.locked}}
                  {{#if (await (compute this.canUnlock course))}}
                    <button
                      type="button"
                      class="link-button"
                      title={{t "general.unlockCourse"}}
                      {{on "click" (perform this.unlockCourse course)}}
                      data-test-unlock
                    >
                      <FaIcon @icon="lock" />
                    </button>
                  {{else}}
                    <FaIcon @icon="lock" class="disabled" />
                  {{/if}}
                {{else if (await (compute this.canLock course))}}
                  <button
                    type="button"
                    class="link-button"
                    title={{t "general.lockCourse"}}
                    {{on "click" (perform this.lockCourse course)}}
                    data-test-lock
                  >
                    <FaIcon @icon="unlock" />
                  </button>
                {{else}}
                  <FaIcon @icon="unlock" class="disabled" />
                {{/if}}
                {{#if (await (compute this.canDelete course))}}
                  <button
                    type="button"
                    class="link-button"
                    title={{t "general.deleteCourse"}}
                    {{on "click" (fn this.confirmRemoval course)}}
                    data-test-remove
                  >
                    <FaIcon @icon="trash" class="enabled" />
                  </button>
                {{else}}
                  <FaIcon @icon="trash" class="disabled" />
                {{/if}}
              {{/if}}
            </td>
          </tr>
          {{#if (includes course.id this.coursesForRemovalConfirmation)}}
            <tr class="confirm-removal">
              <td colspan={{if (media "isLaptopAndUp") "15" "10"}}>
                <div class="confirm-message">
                  {{t
                    "general.confirmRemoveCourse"
                    publishedOfferingCount=course.publishedOfferingCount
                  }}
                  <br>
                  <div class="confirm-buttons">
                    <button {{on "click" (fn @remove course)}} type="button" class="remove text">
                      {{t "general.yes"}}
                    </button>
                    <button
                      type="button"
                      class="done text"
                      {{on "click" (fn this.cancelRemove course)}}
                    >
                      {{t "general.cancel"}}
                    </button>
                  </div>
                </div>
              </td>
            </tr>
          {{/if}}
        {{else}}
          <tr data-test-empty-list>
            <td class="text-center" colspan={{if (media "isLaptopAndUp") "15" "10"}}>
              {{if @query (t "general.noResultsFound") (t "general.none")}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/unless}}
</div>

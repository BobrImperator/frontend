{{! template-lint-disable attribute-indentation }}
{{#if (or true isIcon (gt (get (await data) "length") 0))}}
  {{#simple-chart
    name=chartType
    isIcon=isIcon
    data=(await sortedData)
    hover=(perform barHover)
    leave=(perform barHover)
    click=(action "barClick")
    as |chart|
  }}
    {{#if tooltipContent}}
      {{#chart.tooltip title=tooltipTitle}}
        {{tooltipContent}}
      {{/chart.tooltip}}
    {{/if}}
  {{/simple-chart}}
{{/if}}

    </label>
    {{#if isManaging}}
      <input
        type="text"
        value={{preferredEmail}}
        oninput={{action (mut preferredEmail) value="target.value"}}
        onkeyup={{action "addErrorDisplayFor" "preferredEmail"}}
        data-test-preferred-email-input
      >
      {{#if

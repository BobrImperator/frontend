{{#if (get (await instructorGroups) "length")}}
  <h4>{{t "general.instructorGroups"}}</h4>
  <ul data-test-instructor-groups>
    {{#each (sort-by "title" (await instructorGroups)) as |instructorGroup|}}
      <li {{action "removeInstructorGroup" instructorGroup}} role="button">
        {{fa-icon "users"}} {{instructorGroup.title}} {{fa-icon "times" class="remove"}}
      </li>
    {{/each}}
  </ul>
{{/if}}

{{#if (get (await instructors) "length")}}
  <h4>{{t "general.instructors"}}</h4>
  <ul data-test-instructors>
    {{#each (sort-by "fullName" (await instructors)) as |user|}}
      <li {{action "removeInstructor" user}} role="button">
        {{user.fullName}} {{fa-icon "times" class="remove"}}
      </li>
    {{/each}}
  </ul>
{{/if}}
{{user-search
  addUser=(action "addInstructor")
  addInstructorGroup=(action "addInstructorGroup")
  currentlyActiveUsers=instructors
  placeholder=userSearchPlaceholder
  availableInstructorGroups=(await availableInstructorGroups)
  currentlyActiveInstructorGroups=instructorGroups
}}
